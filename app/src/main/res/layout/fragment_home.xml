<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/transparent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".HomeFragment"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/round_corners"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_card"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exercise"
                        android:textColor="@color/white"
                        android:fontFamily="@font/pixel"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/running"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/exerciseText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="..."
                                android:textColor="@color/white"
                                android:fontFamily="@font/pixel"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="min"
                                android:textColor="#80FFFFFF"
                                android:fontFamily="@font/pixel"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_corners_card"
                    android:padding="15dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart"
                        android:textColor="@color/white"
                        android:fontFamily="@font/pixel"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/heart_rate"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/heartRateText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="..."
                                android:textColor="@color/white"
                                android:fontFamily="@font/pixel"
                                android:textSize="12sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="bpm"
                                android:textColor="#80FFFFFF"
                                android:fontFamily="@font/pixel"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corners_card"
                android:layout_marginTop="10dp"
                android:padding="15dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pixel"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/sleepText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/pixel"
                    android:textSize="12sp"/>

                <ProgressBar
                    android:id="@+id/sleepProgress"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="8dp"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:progress="0"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar_custom" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pixel"
                android:textColor="@color/white"
                android:text="Daily Missions"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/daily_mission_container"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/dailyMission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/pixel"
                    android:layout_gravity="center_horizontal"
                    android:text="Generating..."/>

                <TextView
                    android:id="@+id/missionXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#D6D6D6"
                    android:fontFamily="@font/pixel"
                    android:layout_gravity="center_horizontal"
                    android:text="+-xp"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/mapImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_3dp"
                android:src="@drawable/background_map"
                android:clipToOutline="true"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="25dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="21sp"
                        android:text="Assasin"
                        android:textColor="@color/white"
                        android:fontFamily="@font/pixel"/>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <ProgressBar
                            android:id="@+id/hp"
                            android:layout_width="120dp"
                            android:layout_height="12dp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progress="69"
                            android:max="100"
                            android:layout_gravity="center_vertical"
                            android:progressDrawable="@drawable/hp_bar"
                            android:layout_marginStart="30dp"/>

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/circle_border_black"/>

                            <TextView
                                android:id="@+id/lvl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#213D51"
                                android:text="1"
                                android:textSize="16sp"
                                android:fontFamily="@font/pixel"
                                android:layout_gravity="center"/>
                        </FrameLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/plyrXP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8sp"
                        android:textColor="@color/white"
                        android:layout_marginStart="35dp"
                        android:layout_marginTop="-10dp"
                        android:text="XP 0/100"/>
                    <ImageView
                        android:id="@+id/playerAvtr"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/assasin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/skill1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/skill_button"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/skill1_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/round_corner_transparent"
                            android:clipToOutline="true"
                            android:src="@drawable/skill1"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skill 1"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:fontFamily="@font/pixel"
                            android:textSize="7sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/skill2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/skill_button"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/skill2_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:clipToOutline="true"
                            android:background="@drawable/round_corner_transparent"
                            android:src="@drawable/skill2"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skill 2"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:fontFamily="@font/pixel"
                            android:textSize="7sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/skill3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="@drawable/skill_button"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/skill3_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal"
                            android:clipToOutline="true"
                            android:background="@drawable/round_corner_transparent"
                            android:src="@drawable/skill3"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skill 3"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/white"
                            android:fontFamily="@font/pixel"
                            android:textSize="7sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


    </LinearLayout>
</ScrollView>